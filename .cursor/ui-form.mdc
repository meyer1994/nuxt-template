    </UFormField>
    
    <UButton type="submit">Submit</UButton>
  </UForm>
</template>
```

## Custom Validation

Use the `validate` prop for complex validation logic:

```vue
<script setup lang="ts">
import type { FormError, FormSubmitEvent } from '@nuxt/ui'

const state = reactive({
  password: '',
  confirmPassword: ''
})

const validate = (state: any): FormError[] => {
  const errors = []
  if (!state.password) errors.push({ name: 'password', message: 'Required' })
  if (state.password !== state.confirmPassword) {
    errors.push({ name: 'confirmPassword', message: 'Passwords do not match' })
  }
  return errors
}

async function onSubmit(event: FormSubmitEvent<typeof state>) {
  // Handle submission
}
</script>

<template>
  <UForm :validate="validate" :state="state" @submit="onSubmit">
    <UFormField label="Password" name="password">
      <UInput v-model="state.password" type="password" />
    </UFormField>
    
    <UFormField label="Confirm Password" name="confirmPassword">
      <UInput v-model="state.confirmPassword" type="password" />
    </UFormField>
    
    <UButton type="submit">Submit</UButton>
  </UForm>
</template>
```

## Form Methods & Error Handling

Access form methods using template refs:

```vue
<script setup lang="ts">
import type { FormErrorEvent } from '@nuxt/ui'

const form = useTemplateRef('form')

async function onError(event: FormErrorEvent) {
  // Focus first error field
  if (event?.errors?.[0]?.id) {
    const element = document.getElementById(event.errors[0].id)
    element?.focus()
    element?.scrollIntoView({ behavior: 'smooth', block: 'center' })
  }
}

function clearForm() {
  form.value?.clear()
}

async function validateForm() {
  try {
    await form.value?.validate()
    console.log('Form is valid')
  } catch (error) {
    console.log('Form has errors')
  }
}
</script>

<template>
  <UForm 
    ref="form" 
    :schema="schema" 
    :state="state" 
    @submit="onSubmit"
    @error="onError"
  >
    <!-- Form fields -->
    
    <div class="flex gap-2">
      <UButton type="submit">Submit</UButton>
      <UButton variant="outline" @click="clearForm">Clear</UButton>
      <UButton variant="ghost" @click="validateForm">Validate</UButton>
    </div>
  </UForm>
</template>
```

## Nested Forms

For complex forms with conditional fields:

```vue
<script setup lang="ts">
const schema = z.object({
  hasAddress: z.boolean(),
  name: z.string().min(1)
})

const addressSchema = z.object({
  street: z.string().min(1, 'Street required'),
  city: z.string().min(1, 'City required')
})

const state = reactive<Partial<Schema & AddressSchema>>({})
</script>

<template>
  <UForm :schema="schema" :state="state" @submit="onSubmit">
    <UFormField label="Name" name="name">
      <UInput v-model="state.name" />
    </UFormField>
    
    <UFormField name="hasAddress">
      <UCheckbox v-model="state.hasAddress" label="Add address" />
    </UFormField>
    
    <UForm v-if="state.hasAddress" :schema="addressSchema" nested>
      <UFormField label="Street" name="street">
        <UInput v-model="state.street" />
      </UFormField>
      
      <UFormField label="City" name="city">
        <UInput v-model="state.city" />
      </UFormField>
    </UForm>
    
    <UButton type="submit">Submit</UButton>
  </UForm>
</template>
```

## Key Guidelines

- Always use TypeScript with `z.output<typeof schema>` for type safety
- Use `reactive<Partial<Schema>>({})` for form state
- Handle form submission with `FormSubmitEvent<Schema>`
- Use `UFormField` with `name` prop that matches schema keys
- Access form methods via template refs: `const form = useTemplateRef('form')`
- Common validation: `validate-on` prop controls when validation triggers
- Error handling: Listen to `@error` event for custom error handling
